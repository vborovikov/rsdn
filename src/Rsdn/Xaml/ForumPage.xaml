<ctrl:NavigablePage x:Class="Rsdn.Xaml.ForumPage"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ai="using:Microsoft.Xaml.Interactions.Core"
                    xmlns:ctrl="using:Rsdn.Xaml"
                    xmlns:i="using:Microsoft.Xaml.Interactivity"
                    xmlns:p="using:Rsdn.Xaml.Views"
                    xmlns:pm="using:Rsdn.Community.Presentation"
                    xmlns:xi="using:Rsdn.Xaml.Interactivity"
                    DataContext="{Binding Forum,
                                          Source={StaticResource PresenterLocator}}">
 <Grid>
  <Grid.ColumnDefinitions>
   <ColumnDefinition Width="0.4*" />
   <ColumnDefinition Width="0.6*" />
  </Grid.ColumnDefinitions>

  <p:ForumView DataContext="{Binding}" />

  <p:ThreadView Grid.Column="1"
                DataContext="{Binding CurrentThread}" />
 </Grid>
</ctrl:NavigablePage>